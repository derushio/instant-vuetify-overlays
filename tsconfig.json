{
    "compilerOptions": {
        "module": "es2015",
        "target": "es5",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./types",
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "baseUrl": "src/",
        "paths": {
            "@/*": ["./*"]
        }
    },
    "include": [
        "node_modules/@types/**/*.d.ts",
        "src/types/**/*.d.ts"
    ]
}
